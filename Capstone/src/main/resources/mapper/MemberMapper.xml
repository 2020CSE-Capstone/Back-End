<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cse.capstonedesign.Capstone.mapper.MemberMapper">
	<select id="getAllMembers" resultType="cse.capstonedesign.Capstone.model.Member"> 
		SELECT * FROM member;
	</select>

	<select id="getMemberById" resultType="cse.capstonedesign.Capstone.model.Member"> 
		SELECT * FROM member WHERE id = #{id};
	</select>

	<insert id="insertMember" useGeneratedKeys="true" parameterType="cse.capstonedesign.Capstone.model.Member"> 
		INSERT INTO member(email, password, name, phone_number)
		VALUE (#{member.email}, #{member.password}, #{member.name}, #{member.phoneNumber});
	</insert>

	<update id="updateMember" useGeneratedKeys="true" parameterType="cse.capstonedesign.Capstone.model.Member">
		UPDATE member SET email = #{member.email}, 
		password = #{member.password},
		name = #{member.name}, 
		phone_number = #{member.phoneNumber} 
		WHERE id = #{id};
	</update>

	<delete id="deleteMember">
		DELETE FROM member WHERE id = #{id};
	</delete>
</mapper>
