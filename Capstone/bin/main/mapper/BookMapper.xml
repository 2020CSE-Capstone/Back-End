<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cse.capstonedesign.Capstone.mapper.BookMapper">
	<select id="getAllBooks" resultType="cse.capstonedesign.Capstone.model.Book"> 
		SELECT * FROM book;
	</select>

	<select id="getBookById" resultType="cse.capstonedesign.Capstone.model.Book"> 
		SELECT * FROM book WHERE id = #{id};
	</select>

	<insert id="insertBook" useGeneratedKeys="true" parameterType="cse.capstonedesign.Capstone.model.Book"> 
		INSERT INTO book(title, author, out)
		VALUE (#{book.title}, #{book.author}, #{book.out});
	</insert>

	<update id="updateBook" useGeneratedKeys="true" parameterType="cse.capstonedesign.Capstone.model.Book">
		UPDATE book SET 
			title = #{book.title}, 
			author = #{book.author},
			out = #{book.out}
		WHERE id = #{id};
	</update>

	<delete id="deleteBook">
		DELETE FROM book WHERE id = #{id};
	</delete>
</mapper>
